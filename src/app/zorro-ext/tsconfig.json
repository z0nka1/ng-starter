{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "public_api.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules",
    "test/node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}